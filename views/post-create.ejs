<form action="/new-post" method="POST" enctype="multipart/form-data">
    <label for="title">Post Title:</label>
    <input type="text" name="title" id="title" required /><br />
  
    <label for="content">Post Content:</label>
    <textarea name="content" id="content" required></textarea><br />
  
    <label for="imageUrl">Image URL:</label>
    <input type="text" name="imageUrl" id="imageUrl" required /><br />
  
    <label for="readTime">Read Time:</label>
    <input type="text" name="readTime" id="readTime" required /><br />
  
    <label for="type">Post Type:</label>
    <input type="text" name="type" id="type" required /><br />
  
    <button type="submit">Create Post</button>
  </form>